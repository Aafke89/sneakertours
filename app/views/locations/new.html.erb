<% content_for :meta_title , "Sneaker Tours" %>
<% content_for :meta_description , "Add a Location"  %>

<div class="wrapper-form">
  <div class="form">
    <div class="form-title">Add a Location</div>
    <%= simple_form_for [@location] do |f| %>
    <!-- Show errormessages -->
      <% if @location.errors.any? %>
    <div class="alert alert-warning"> <%= @location.errors.messages.first[1].join %> </div>
    <% end %>
    <!-- The rest of the form -->
    <%= f.input :name, placeholder: "Location", label:false %>
    <%= f.input :description, placeholder: "description", label:false %>
    <%= f.input :address, placeholder: "Kalverstraat 23", label: false %>

    <%= f.input :link, placeholder: "http://www.location.nl", label:false %>
    <%= f.input :picture, placeholder: "url to image", label:false %> <br>
   <div class="text-center">Category:</div>
    <%= f.input :category, collection: ["culture", "bar", "food", "party", "shop", "chill"], label: false %> <br><br>
    <% if current_user %>
      <%= f.input :email, input_html: {value: current_user.email || ""}, label: false%>
    <% else %>
      <%= f.input :email, placeholder: "your email here", label: false%>
    <% end %> <br><br>


    <!-- Submit this event -->
    <%= f.button :submit, class: "btn-loc-cat text-center"  %>
    <% end %>
  </div>
  <% if !current_user || current_user.permission != "admin"%>
  <div class="form-description">
    Hi! Here you can add a location that you think should be on our website. Try to be as complete as possible. After one of our admins accepted it, it will be shown on our website. It could be that we'll make small changes. <br>
    As we would like to know who is adding events we are asking for your emailadress. This will only be used very sparcely by us and will not be given to third parties.
  </div>
  <% end %>
</div>
