<!DOCTYPE html>
<html>
<head>
  <title>Sneakertours</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>

  <meta name="description" content="<%= meta_description %>">

  <!-- Facebook Open Graph data -->
  <meta property="og:title" content="<%= meta_title %>" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="<%= request.original_url %>" />
  <meta property="og:image" content="<%= image_url(meta_image) %>" />
  <meta property="og:description" content="<%= meta_description %>" />
  <meta property="og:site_name" content="<%= meta_title %>" />

  <!-- Google+ Schema.org markup -->
  <meta itemprop="name" content="<%= meta_title %>">
  <meta itemprop="description" content="<%= meta_description %>">
  <meta itemprop="image" content="<%= image_url(meta_image) %>">


</head>
<body>

<%#= flash[:notice] if flash[:notice] %>
<%= render 'shared/flash' %>
<%= yield %>
<%= render 'shared/navbar' unless @disable_nav || @show_logout %>
<%= render 'shared/menu' unless @disable_nav %>
<%= render 'shared/footer' unless @disable_nav %>

<%= javascript_include_tag "https://maps.google.com/maps/api/js?libraries=places&sensor=false&key=#{ENV["GOOGLE_API_KEY"]}" %>
  <%= javascript_include_tag "https://cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js" %>
<%= javascript_include_tag 'application'%>

<%= yield(:after_js) %>

</body>
</html>
